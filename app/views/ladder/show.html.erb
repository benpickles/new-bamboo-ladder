<ol class="rankings" data-max="<%= sparkline_max %>" data-min="<%= sparkline_min %>">
  <% @ladder.players.each do |player| %>
    <li class="rankings-entry">
      <span class="rankings-position"><%= player.position %>.</span>
      <span class="rankings-name"><%= player.name %></span>
      <span class="rankings-elo"><%= player.elo_rating %></span>
      <span class="sparkline"><%= sparkline_data_for(player) %></span>
    </li>
  <% end %>
</ol>
