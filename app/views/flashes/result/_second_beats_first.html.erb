<div class="flash-msg flash-result">
  <div class="winner">
    <div class="l-inside">
      <p><%= player result.winner_name %> takes the top position</p>
    </div>
  </div>
  <div class="loser">
    <div class="l-inside">
      <p>relegating <%= player result.loser_name %> to <%= ordinal(result.loser_new_position + 1) %> place</p>
    </div>
  </div>
  <div class="actions">
    <div class="l-inside">
      <p><%= link_to "undo", undo_results_path %></p>
    </div>
  </div>
</div>
